<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>encartgo | Editar perfil</title>
    <link rel="stylesheet" href="/styles/css/styles.css">
</head>
<body>
  <div class="horizontal__homeNav">
    <ul>
        <li><a href="/">Inicio</a></li>
        <li><a href="/search">Buscar</a></li>
        <% if (userDB.bussiness){ %>
            <li><a href="/orders/<%= userDB.id %> ">Ordenes</a></li>
          <% } %>
        <% if (userDB.bussiness) { %>
          <li><a href="/show-store/<%= userDB.id %>">Mi Cuenta</a></li>
        <% } else { %>
          <li><a href="/show-profile/<%= userDB.id %>">Mi Cuenta</a></li>
        <% } %> 
    </ul>
  </div>

    <section class="user__edit">
         <form method="POST" enctype="multipart/form-data">
            <div class="user__form--nameInfo">
                <% if (userDB.image) { %> 
                  <div class="user--image">
                    <img src="/uploads/profiles/<%= userDB.image %> " width="400px" alt="profile image">
                  </div>
                <% } %> 
                <h3>Nombre</h3>
                <input class="input" name ="name" type="text" value="<%= userDB.name %> " placeholder="Name">
                <h3>Apellido</h3>
                <input class="input" name="lastName" type="text" value="<%= userDB.lastName %> " placeholder="Apellido">
            </div>
            <div class="user__form--mainInfo">
                <h3>Nombre Negocio <span id="profileBussinesAdv">Si no tienes uno deja el campo vacío</span></h3>
                <input class="input" name="bussiness" type="text" 
                    <% if (userDB.bussiness) { %>
                        value=<%= userDB.bussiness %> 
                    <% } %>
                placeholder="Nombre de tu negocio">
                <h3>Dirección</h3>
                <input name="address" class="input" type="text" values="<%= userDB.address %> " placeholder="Pon tu dirección">
                <!-- <div class="user--adress"></div> -->
                <h3>Imagen de perfil</h3>
                <input class="input" type="file" name="image">
            </div>
            <button class="button" type="submit">Aceptar</button>
        </form>

        <section class="nav__main">
          <nav class="nav">
              <div class="icon">
                  <a href="/"><img src="../assets/HomeG.png" alt=""></a>
                  <span>Inicio</span>
              </div>
              <div class="icon">
                  <a href="/search"><img src="../assets/Search.png" alt=""></a>
                  <span>Buscar</span>
              </div>
              <% if (userDB.bussiness) {%>
                  <div class="icon">
                    <a href="/orders/<%= userDB.id %> "><img src="../assets/Order.png" alt=""></a>
                    <span>Ordenes</span>
                </div>
                <% } %>
              <div class="icon">
                <% if (userDB.bussiness) { %>
                  <a href="/show-store/<%= user.id %>" ><img src="/assets/ProfileG.png" alt=""></a>
                  <span>Mi Cuenta</span>
                <% } else { %>
                  <a href="/show-profile/<%= userDB.id %> "><img src="/assets/ProfileG.png" alt=""></a>
                  <span>Profile</span>
                <% } %> 
              </div>
          </nav>
      </section>
    </section>
</body>
</html>