<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>encartgo | <%= userDB.name %> </title>
    <link rel="stylesheet" href="/styles/css/styles.css">
</head>
<body>
    <section class="user__main">

        <div class="horizontal__homeNav">
            <ul>
                <li><a href="/">Inicio</a></li>
                <li><a href="/search">Buscar</a></li>
                <li><a href="/orders/<%= userDB.id %> ">Ordenes</a></li>
                <% if (userDB.bussiness) { %>
                  <li><a href="/show-store/<%= userDB.id %>">Mi Cuenta</a></li>
                <% } else { %>
                  <li><a href="/show-profile/<%= userDB.id %>">Mi Cuenta</a></li>
                <% } %> 
            </ul>
        </div>

        <div class="user__main--info">
          <% if (userDB.image) { %>
            <div class="user--image">
                <img src="/uploads/profiles/<%= userDB.image %>" width="400px" alt="profile image">
            </div>
          <% } else { %>
            <div class="user--image">
                <img src="/assets/Profile.png" alt="Profile image">
            </div>
            <% } %>
            <p><%= userDB.name %> </p>
            <a href="/edit-profile/<%= userDB.id %> ">Editar Perfil</a>
        </div>
        <div class="user--info">
            <h3>Información</h3>
            <span>Correo</span>
            <p><%= userDB.email %> </p>
            <span>Dirección</span>
            <p><%= userDB.address %> </p>
            <% if (userDB.bussiness) { %>
                <span>Negocio</span>
                <p><%= userDB.bussiness %> </p>
            <% } %>
        </div>
        <!-- <div class="user--adress"></div> -->

        <section class="nav__main">
            <nav class="nav">
                <div class="icon">
                    <a href="/"><img src="../assets/HomeG.png" alt=""></a>
                    <span>Inicio</span>
                </div>
                <div class="icon">
                    <a href="/search"><img src="../assets/SearchG.png" alt=""></a>
                    <span>Buscar</span>
                </div>
                <div class="icon">
                    <a href="/orders/<%= userDB.id %> "><img src="../assets/OrderG.png" alt=""></a>
                    <span>Ordenes</span>
                </div>
                <div class="icon">
                  <% if (userDB.bussiness) { %>
                    <a href="/show-store/<%= userDB.id %>" ><img src="/assets/Profile.png" alt=""></a>
                    <span>Mi Cuenta</span>
                  <% } else { %>
                    <a href="/show-profile/<%= userDB.id %> "><img src="/assets/Profile.png" alt=""></a>
                    <span>Profile</span>
                  <% } %> 
                </div>
            </nav>
        </section>

    </section> 
</body>
</html>